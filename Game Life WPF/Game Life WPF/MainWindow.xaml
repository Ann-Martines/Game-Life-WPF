<Window x:Class="Game_Life_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Life_WPF"
        mc:Ignorable="d"
        Title="Life"
        Height="350"
        Width="450"
        MaxHeight="350"
        MaxWidth="450"
        Loaded="Window_Loaded">
    <Grid>
        <Button Name="btnStart"
                Content="Start"
                FontSize="15"
                FontFamily="Trebuchet MS"
                Margin="10,10,325,280"
                Click="btnStart_Click"/>
        <Button Name="btnRestart"
                Content="Restart"
                FontSize="15"
                FontFamily="Trebuchet MS"
                Margin="10,50,325,240"
                Click="btnRestart_Click"/>
        <Canvas x:Name="polegame"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="300"
                Width="300" Margin="125,9,0,0" ></Canvas>

    </Grid>
</Window>
